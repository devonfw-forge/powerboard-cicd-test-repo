    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^26.6.3",
    "jest-mock-extended": "^1.0.18",
    "prettier": "^2.1.2",
    "pretty-quick": "^2.0.1",
    "supertest": "^6.0.0",
