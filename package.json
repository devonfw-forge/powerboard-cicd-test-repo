  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/migration/",
      "<rootDir>/config/",
      "<rootDir>/app/visibility",
      "entities",
      ".module.ts",
      ".main.ts",
      ".filter.ts",
      ".dto.ts",
      ".entity.ts",
      ".model.ts",
      "model"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && eslint --cache --fix"
    }
  }
